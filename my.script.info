-- تحديث بيانات السيرفر
local function updateServerInfo()
	playerCountLabel.Text = tostring(#Players:GetPlayers()) .. " Player(s)"
	local success, info = pcall(function()
		return MarketplaceService:GetProductInfo(game.PlaceId)
	end)
	if success and info and info.Name then
		placeNameLabel.Text = "Place Name: " .. info.Name
	else
		placeNameLabel.Text = "Place Name: Unknown"
	end
end

task.spawn(function()
	while true do
		updateServerInfo()
		task.wait(5)
	end
end)

