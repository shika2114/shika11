local function playAnimation()
	animLabel.Visible = true
	animLabel.BackgroundTransparency = 1
	animLabel.TextTransparency = 1

	local tweenIn = TweenService:Create(animLabel, TweenInfo.new(0.5), {BackgroundTransparency = 0.2, TextTransparency = 0})
	tweenIn:Play()
	tweenIn.Completed:Wait()

	task.wait(1.5)

	local tweenOut = TweenService:Create(animLabel, TweenInfo.new(0.5), {BackgroundTransparency = 1, TextTransparency = 1})
	tweenOut:Play()
	tweenOut.Completed:Wait()

	animLabel.Visible = false
end

-- أمر الشات يفتح الواجهة + الأنيميشن
local function handleChat(msg, senderId)
	if msg:lower() == ";infoo" and senderId == player.UserId then
		playAnimation()
		task.wait(2)
		screenGui.Enabled = true
	end
end

-- دعم الشات الجديد
TextChatService.MessageReceived:Connect(function(message)
	if message.TextSource and message.TextSource.UserId == player.UserId then
		handleChat(message.Text, message.TextSource.UserId)
	end
end)

-- دعم الشات القديم
player.Chatted:Connect(function(msg)
	handleChat(msg, player.UserId)
end)
